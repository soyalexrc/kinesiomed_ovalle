generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["multiSchema"]
}

datasource db {
  provider  = "postgresql"
  // Uses connection pooling
  url       = env("POSTGRES_URL")
  // Uses direct connection, ⚠️ make sure to keep this to `POSTGRES_URL_NON_POOLING`
  // or you'll have dangling databases from migrations
  directUrl = env("POSTGRES_URL_NON_POOLING")
  schemas   = ["kinesiomed"]
}

model ContactBar {
  id               Int               @id @default(autoincrement())
  proyId           String            @unique
  name             String
  image            String
  createdAt        DateTime          @default(now())
  socialMediaLinks SocialMediaLink[]

  @@schema("kinesiomed")
}

model SocialMediaLink {
  id           Int         @id @default(autoincrement())
  proyId       String      @unique
  title        String
  href         String
  iconName     String
  iconUrl      String?
  ContactBar   ContactBar? @relation(fields: [contactBarId], references: [id])
  contactBarId Int?

  @@schema("kinesiomed")
}

model Navbar {
  id          Int          @id @default(autoincrement())
  proyId      String       @unique
  logoImage   String
  navbarLinks NavbarLink[]

  @@schema("kinesiomed")
}

model NavbarLink {
  id                 Int     @id @default(autoincrement())
  proyId             String  @unique
  title              String
  href               String?
  parentNavbarLinkId Int?
  Navbar             Navbar? @relation(fields: [navbarId], references: [id])
  navbarId           Int?

  // NavbarLink         NavbarLink?  @relation(fields: [navbarLinkId], references: [id])
  // NavbarLink         NavbarLink[]
  @@schema("kinesiomed")
}

model Footer {
  id          Int    @id @default(autoincrement())
  proyId      String @unique
  logoImage   String
  description String

  // socialMediaLinks SocialMediaLink[]
  // copyRightText    String
  @@schema("kinesiomed")
}
